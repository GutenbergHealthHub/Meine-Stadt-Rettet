<resources>

    <!-- inherit from the material theme -->


    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryTab</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentTab</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!-- Base application theme. parent="Theme.AppCompat.Light.NoActionBar" -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
<!--        <item name="actionBarTheme">@style/Toolbar</item>-->


        <!--<item name="colorControlActivated">@color/colorPrimary</item>-->
        <!--
        <item name="android:windowBackground">@color/md_blue_500</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_normal</item> -->


        <item name="android:fontFamily">@font/open_sans_family</item>
        <!--<item name="android:fontFamily">@font/quicksand_bold</item>-->
        <item name="buttonStyle">@style/Button</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>

    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/icons</item>
        <item name="colorControlNormal">@color/icons</item>

    </style>

    <style name="LowerCaseMenuTextAppearance" parent="Widget.AppCompat.ActionButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AppThemeMSR" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_H1" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_H2" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Text_H3" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text_H4" parent="AppTheme">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppThemeASB" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/asbYellow</item>
        <item name="colorPrimaryDark">@color/asbYellowDark</item>
        <item name="colorAccent">@color/asbYellowHint</item>
        <item name="colorControlActivated">@color/asbYellowHint</item>
        <item name="colorButtonNormal">@color/asbYellowHint</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppThemeMSR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_xml</item>
        <!--<item name="android:windowBackground">@layout/temp_layout</item>-->
    </style>

    <style name="MSR_RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MSR_CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MSR_TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MSR_Tab</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabIndicatorColor">@color/icons</item>
        <item name="tabSelectedTextColor">@color/icons</item>
    </style>

    <style name="MSR_Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@drawable/msr_button_primary</item>
    </style>



    <style name="MSR_Button_Block_Primary" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/msr_button_primary</item>
    </style>

    <style name="MSR_Button_Block_Secondary" parent="MSR_Button_Block_Primary">
        <item name="android:background">@drawable/msr_button_secondary</item>
    </style>

    <style name="MSR_Button_Block_Danger" parent="MSR_Button_Block_Primary">
        <item name="android:background">@drawable/msr_button_danger</item>
    </style>

    <style name="MSR_Button_Block_Outline_White" parent="MSR_Button_Block_Primary">
        <item name="android:background">@drawable/msr_button_outline</item>
    </style>

    <style name="MSR_Button_Block_Outline_Blue" parent="MSR_Button_Block_Primary">
        <item name="android:background">@drawable/msr_button_outline_blue</item>
    </style>

    <style name="MSR_Button_Block_White" parent="MSR_Button_Block_Primary">
        <item name="android:background">@drawable/msr_button_white</item>
    </style>

    <style name="MSR_Space_Linear">
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MSR_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/msr_edit_text</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Layout_Dark">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="MSR_Layout_Dark">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MSR_TextView_White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MSR_TextView_Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MSR_TextView_Hint">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MSR_TextView_Attention">
        <item name="android:textColor">@color/md_red_400</item>
    </style>

    <!-- Text Styles -->
    <style name="big_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_v2" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_v2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_red_v2" parent="button_v2">
        <item name="android:background">@drawable/button_red_v2</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayout.HintText</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="TextAppearance.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
