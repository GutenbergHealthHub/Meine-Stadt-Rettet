<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/focusLayout"
    style="@style/Layout_Dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".view.protocols.ProtocolActivity">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_single_line"
        android:textColor="@color/icons"
        android:text="@string/your_status_is_inactive_because"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/activity_horizontal_margin">
    </TextView>

    <!--<View android:layout_height="1dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginStart="@dimen/activity_horizontal_margin"-->
        <!--android:layout_marginEnd="@dimen/activity_horizontal_margin"-->
        <!--android:background="@color/icons" />-->

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_subtitle_medium"
        android:textColor="@color/icons"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/sir_off_duty">
    </TextView>


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_subtitle_medium"
        android:textColor="@color/icons"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/sir_profile_incomplete">
    </TextView>


    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_subtitle_medium"
        android:textColor="@color/icons"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/sir_standby_hours">
    </TextView>


    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_subtitle_medium"
        android:textColor="@color/icons"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="@string/sir_standby_days">
    </TextView>

    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/icons"
        app:rippleColor="@color/md_white_1000"
        android:textAllCaps="false"
        android:id="@+id/btn_neutral"
        android:textSize="@dimen/text_button"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/cancel"
        android:layout_marginTop="10dp"
        android:background="@drawable/msr_button_outline"
        android:textColor="@color/icons"/>
</LinearLayout>
