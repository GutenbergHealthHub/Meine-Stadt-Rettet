<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/buttonBarButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titlePin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pin_dialog"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/pinInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wrongPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wrong_pin"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="20sp"
        android:visibility="gone" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/numericPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="1"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="2"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="3"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/button4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="4"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="5"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="6"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/button7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="7"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="8"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="9"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:enabled="false"
                android:onClick="onClick"
                android:text="7"
                android:textColor="@color/colorCyan"
                android:textSize="25sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/round_button"
                android:onClick="onClick"
                android:text="0"
                android:textColor="@color/colorCyan"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonDeleteBack"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_weight="0"
                android:background="@drawable/ic_action_delete"
                android:onClick="onClick"
                android:textColor="@color/colorCyan"
                android:textSize="12sp" />
        </LinearLayout>


            <TextView
                android:id="@+id/fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fingerprint_activated"
                android:gravity="center"
                android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logOut"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="@string/logOut"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </TableLayout>


</LinearLayout>
