<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/focusLayout"
    style="@style/Layout_Dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".view.protocols.ProtocolActivity">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"
        android:textSize="@dimen/text_single_line"
        android:textAlignment="center"
        android:textColor="@color/icons"
        android:text="@string/incomplete_protocol_saved"
        android:gravity="center"
        android:layout_margin="10pt">
    </TextView>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/icons"
        android:textAllCaps="false"
        android:id="@+id/btn_positive"
        android:textSize="@dimen/text_button"
        app:rippleColor="@color/md_white_1000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginBottom="10dp"
        android:textColor="@color/icons"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/icons"
        app:rippleColor="@color/md_white_1000"
        android:textAllCaps="false"
        android:id="@+id/btn_negative"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="@color/icons"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/icons"
        app:rippleColor="@color/md_white_1000"
        android:textAllCaps="false"
        android:id="@+id/btn_neutral"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginTop="10dp"
        android:textColor="@color/icons"/>
</LinearLayout>
